    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@clerk/backend": "^1.21.0",
    "@elysiajs/cors": "^1.2.0",
    "@letta-ai/letta-client": "^0.1.30",
    "drizzle-orm": "^0.38.3",
    "elysia": "^1.2.12",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "drizzle-kit": "^0.30.1",
    "typescript": "^5.7.2"
  }
}
